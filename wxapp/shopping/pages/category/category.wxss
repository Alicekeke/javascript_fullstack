.main{
  height: 100%;
}
.category-left{
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}
.cate-list{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #ffffff;
}
/* 注意同级类名无空格 */
.cate-list.on{
  color: #ab956d;
  border-color: #ab956d;
}
/* 右边图文 */
.content{
  height: 100%;
}
.category-right{
  float: right;
  width: 600rpx;
  height: 100%;
  overflow: hidden;
}
/* 每一个id对应的某详情屏 */
.cate-box{
  min-height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}
.cate-bannner image{
  display: block;
  width: 100%;
  height: 190rpx;
}
.cate-title{
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  padding: 30rpx 0 55rpx;
  text-align: center;
  line-height: 30rpx;
  color: #ab986d;
  font-size: 28rpx;
}
.product-list{
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  margin: 0 20rpx 20rpx 0;
  font-size: 24rpx;
}
.product-list image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.product-list:nth-child(3){
  margin-right: 0;
}
